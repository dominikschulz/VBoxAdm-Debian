sub get_name_by_id {
    my $dbh   = shift;
    my $id    = shift;
    my $query = "SELECT name FROM domains WHERE id = ?";
    my $sth   = $dbh->prepare($query);
    $sth->execute($id);
    my $domain_name = $sth->fetchrow_array();
    $sth->finish();
    return $domain_name;
}

sub get_id_by_name {
    my $dbh   = shift;
    my $name  = shift;
    my $query = "SELECT id FROM domains WHERE name = ?";
    my $sth   = $dbh->prepare($query);
    $sth->execute($name);
    my $domain_id = $sth->fetchrow_array();
    $sth->finish();
    return $domain_id;
}

