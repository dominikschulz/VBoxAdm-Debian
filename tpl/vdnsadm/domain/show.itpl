[% INCLUDE vwebadm/includes/header.tpl %]
    <div id="main" role="main">
    	<h2>Viewing Domain: [% domain %]</h2>
		<br />
		[% FOREACH line IN records %]
		[% IF loop.first %]
		<h2>Records</h2>
		<table class="datatable">
			<thead>
			<tr>
				<th>[% "Domain" | l10n %]</th>
				<th>[% "TTL" | l10n %]</th>
				<th>[% "Type" | l10n %]</th>
				<th>[% "Priority" | l10n %]</th>
				<th>[% "Content" | l10n %]</th>
				<th>[% "Active" | l10n %]</th>
				<th></th>
				<th></th>
			</tr>
			</thead>
			<tbody>
		[% END %]
			<tr class="[% loop.parity %] [% IF line.is_active %]enabled[% ELSE %]disabled[% END %]">
				<td>
					[% line.name %]
				</td>
				<td>
					[% line.ttl %]
				</td>
				<td>
					[% line.type %]
				</td>
				<td>
					[% line.priority %]
				</td>
				<td>
					[% line.content %]
				</td>
				<td>
					[% IF line.is_active == 1 %]
					<a href="[% base_url %]?rm=update_record&record_id=[% line.id %]&is_active=0">[% "Yes" | l10n %]</a>
					[% ELSE %]
					<a href="[% base_url %]?rm=update_record&record_id=[% line.id %]&is_active=1">[% "No" | l10n %]</a>
					[% END %]
				</td>
				<td>
					<a href="[% base_url %]?rm=edit_record&record_id=[% line.id %]">[% "edit" | l10n %]</a>
				</td>
				<td>
					<a onClick="if(confirm('[% "Do you really want to delete the Record [_1]?" | l10n(line.id) %]')) return true; else return false;" href="[% base_url %]?rm=remove_record&record_id=[% line.id %]">[% "del" | l10n %]</a>
				</td>
			</tr>
		[% IF loop.last %]
		</tbody>
		<tfoot>
		</tfoot>
		</table>
		[% END %]
		[% END %]
		<br />
		<a href="[% base_url %]?rm=create_record#?w=500" rel="modal_new" class="modallight"><img src="[% media_prefix %]/icons/fffsilk/add.png" border="0" /> [% "Add Record" | l10n %]</a>
    </div>
    <div id="modal_new" class="modal_block">
    	[% INCLUDE vdnsadm/record/create_partial.tpl %]
    </div>
[% INCLUDE vwebadm/includes/footer.tpl %]
